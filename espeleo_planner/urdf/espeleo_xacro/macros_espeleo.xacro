<?xml version='1.0'?>
<robot>

  <macro name="cylinder_inertia" params="m r h">
    <inertia  
      ixx="${m*(3*r*r+h*h)/12}" ixy = "0" ixz = "0"
      iyy="${m*(3*r*r+h*h)/12}" iyz = "0"
      izz="${m*r*r/2}"
    />
  </macro>

  <macro name="box_inertia" params="m x y z">
    <inertia  
      ixx="${m*(x*x+z*z)/12}" ixy = "0" ixz = "0"
      iyy="${m*(y*y+z*z)/12}" iyz = "0"
      izz="${m*(x*x+y*y)/12}"
    />
  </macro>
  
  <macro name="sphere_inertia" params="m r">
    <inertia  
      ixx="${2*m*r*r/5}" ixy = "0" ixz = "0"
      iyy="${2*m*r*r/5}" iyz = "0"
      izz="${2*m*r*r/5}"
    />
  </macro>
  


  <!-- params = left/right XPosition YPosition -->

  <macro name="wheel" params="lr x_pos y_pos rot">
    <link name="${lr}_wheel">
      <collision>
        <origin xyz="0 0 0" rpy="${PI/2} 0 0" />
        <geometry>
          <cylinder length="${wheelWidth}" radius="${wheelRadius}"/>
        </geometry>
      </collision>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://espeleo_description/urdf/stl/roda_esquerda.stl" />
        </geometry>
        <material name="grey"/>
      </visual>

      <inertial>
        <origin xyz="0 0 0" rpy="${PI/2} 0 0 " />
        <mass value="${wheelMass}"/>
        <cylinder_inertia m="${wheelMass}" r="${wheelRadius}" h="${wheelWidth}"/>
      </inertial>
    </link>

    <gazebo reference="${lr}_wheel">
      <mu1 value="1"/>
      <mu2 value="1"/>
      <kp  value="1000000.0" />
      <kd  value="10.0" />      
      <fdir1 value="0 0 1"/>
      <minDepth>0.001</minDepth>
      <maxContacts>1</maxContacts>
      <!--maxVel>1.0</maxVel-->
      <material>Gazebo/Red</material>
    </gazebo>

    <joint name="${lr}_wheel_joint" type="continuous">
      <parent link="chassis"/>
      <child link="${lr}_wheel"/>
      <origin xyz="${x_pos} ${y_pos} -0.008" rpy="0 0 ${rot}" />
      <axis xyz="0 1 0" rpy="0 0 0" />
      <limit effort="100" velocity="10000"/>
      <joint_properties damping="0.0" friction="0.0"/>
    </joint>

    <transmission name="${lr}_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${lr}_wheel_joint">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="${lr}Motor">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
        <mechanicalReduction>10</mechanicalReduction>
      </actuator>
    </transmission>
  </macro>      





  <macro name="leg" params="lr x_pos y_pos rot">
    <link name="${lr}_leg">
      <collision>
        <origin xyz="0 0 0" rpy="0 0 ${rot}" />
        <geometry>
	  <mesh filename="package://espeleo_description/urdf/stl/leg.stl" />          
	  <!--<cylinder length="${wheelWidth}" radius="${wheelRadius}"/>-->
        </geometry>
      </collision>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 ${rot}" />
        <geometry>
	  <mesh filename="package://espeleo_description/urdf/stl/leg.stl" />  
        </geometry>
        <material name="grey"/>
      </visual>

      <inertial>
        <origin xyz="0 0 0" rpy="0 0 ${rot}" />
        <mass value="${wheelMass}"/>
        <cylinder_inertia m="${wheelMass}" r="${wheelRadius}" h="${wheelWidth}"/>
      </inertial>
    </link>

    <gazebo reference="${lr}">
      <mu1 value="1"/>
      <mu2 value="1"/>
      <kp  value="1000000.0" />
      <kd  value="10.0" />      
      <fdir1 value="0 0 1"/>
      <minDepth>0.001</minDepth>
      <maxContacts>1</maxContacts>
      <!--maxVel>1.0</maxVel-->
      <material>Gazebo/Red</material>
    </gazebo>

    <joint name="${lr}" type="revolute">

      <parent link="chassis"/>
      <child link="${lr}_leg"/>
      <origin xyz="${x_pos} ${y_pos} -0.008" rpy="0 0 ${rot}" />
      <axis xyz="0 1 0" rpy="0 0 0" />
      <limit effort="100" lower="-3.14" upper="3.14" velocity="100"/>
      <joint_properties damping="0.0" friction="0.0"/>

    </joint>

    <transmission name="${lr}_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${lr}_leg_joint">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="${lr}Motor">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
        <mechanicalReduction>10</mechanicalReduction>
      </actuator>
    </transmission>
  </macro>      





  <macro name="star" params="lr x_pos y_pos rot">
    <link name="${lr}_star">
      <collision>
        <origin xyz="-0.134 -0.025 -0.115" rpy="0 0 0" />
        <geometry>
	  <mesh filename="package://espeleo_description/urdf/stl/rodaEstrela.STL" scale="0.001 0.001 0.001" />          
	  <!--<cylinder length="${wheelWidth}" radius="${wheelRadius}"/>-->
        </geometry>
      </collision>

      <visual>
        <origin xyz="-0.134 -0.025 -0.115" rpy="0 0 0" />
        <geometry>
	  <mesh filename="package://espeleo_description/urdf/stl/rodaEstrela.STL" scale="0.001 0.001 0.001" />  
        </geometry>
        <material name="grey"/>
      </visual>

      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="${wheelMass}"/>
        <cylinder_inertia m="${wheelMass}" r="${wheelRadius}" h="${wheelWidth}"/>
      </inertial>
    </link>

    <gazebo reference="${lr}">
      <mu1 value="1"/>
      <mu2 value="1"/>
      <kp  value="1000000.0" />
      <kd  value="10.0" />      
      <fdir1 value="0 0 1"/>
      <minDepth>0.001</minDepth>
      <maxContacts>1</maxContacts>
      <!--maxVel>1.0</maxVel-->
      <material>Gazebo/Red</material>
    </gazebo>

    <joint name="${lr}" type="revolute">

      <parent link="chassis"/>
      <child link="${lr}_star"/>
      <origin xyz="${x_pos} ${y_pos} -0.008" rpy="0 0 ${rot}" />
      <axis xyz="0 1 0" rpy="0 0 0" />
      <limit effort="100" lower="-3.14" upper="3.14" velocity="100"/>
      <joint_properties damping="0.0" friction="0.0"/>

    </joint>

    <transmission name="${lr}_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${lr}_star_joint">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="${lr}Motor">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
        <mechanicalReduction>10</mechanicalReduction>
      </actuator>
    </transmission>
  </macro>      

    
</robot>
